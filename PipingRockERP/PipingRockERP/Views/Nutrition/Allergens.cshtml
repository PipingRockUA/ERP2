@model List<Allergen>
@{
    ViewBag.Title = "Allergens";
}
@if (Request.IsAuthenticated)
{
    @Html.Partial("_NutritionPartial")
    <head>
        <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
    </head>
    <aside style="margin-top:10px">
        <div class="panel" @*style="border:1px solid"*@>
            <div style="margin-left: 20px">
                <h4>Nutrition > Allergens</h4>
                <button style="max-width:90px" class="btn btn-success" onclick="location.href='@Url.Action("Add", "Nutrition", new { param = "AllergenAdd" })'">Add</button>
                <p style="text-align:right; font-size:14px">Page:1 Records:@Model.Count</p>
            </div>
            <table class="table">
                <thead>
                    <tr style="font-size:14px">
                        <th>ID</th>
                        <th>Allergens</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr style="font-size:14px">
                            <td width="10%">@item.AllergenId</td>
                            <td width="50%">@item.Allergen1</td>
                            <td width="20%">@Html.ActionLink("Edit", "AllergenEdit", "Nutrition", new { allergenId = item.AllergenId.ToString() }, null)</td>
                            @*<td width="5%"><input class="btn-edit" type="button" value="Edit" onclick="location.href='@Url.Action("Edit", "Home")'" /></td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </aside>
    <footer>
        <p style="text-align:center; font-size:14px">Total Pages:1 Records:@Model.Count</p>
    </footer>
}