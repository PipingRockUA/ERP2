@{
    ViewBag.Title = "BrandAdd";
}
@if (Request.IsAuthenticated)
{
    @Html.Partial("_MaintenancePartial")
    <head>
        <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
    </head>
    <aside style="margin-top:10px">
        <div class="panel" @*style="border:1px solid"*@>
            <div style="margin-left: 20px">
                <h4>Maintenance > Add Brand</h4>
            </div>
            <button style="margin-left:18px; max-width:90px" class="btn btn-success" onclick="location.href='@Url.Action("Brands", "Maintenance")'">To the List</button>
            @using (Html.BeginForm("SubmitBrandAdd", "Maintenance"))
            {
                <input style="margin-left:18px; margin-top:2px; width:90px" class="btn btn-success" type="submit" id="SubmitBrandAdd" value="Save" />
                <table>
                    <tr>
                        <td>Brand ID</td>
                        <td><div id="brandId" name="brandId">New</div></td>
                    </tr>
                    <tr>
                        <td>Brand Name</td>
                        <td><input class="form-control" type="text" id="brandName" name="brandName" value="N/A" /></td>
                    </tr>
                    <tr>
                        <td>Brand Code</td>
                        <td><input class="form-control" type="text" id="brandCode" name="brandCode" value="N/A" /></td>
                    </tr>
                </table>
            }
        </div>
    </aside>
}

