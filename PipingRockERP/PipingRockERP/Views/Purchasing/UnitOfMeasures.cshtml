@model List<UnitOfMeasure>

@{
    ViewBag.Title = "UnitOfMeasures";
}
@if (Request.IsAuthenticated)
{
    @Html.Partial("_PurchasingPartial")
    <aside style="margin-top:10px">
        <div class="panel" @*style="border:1px solid"*@>
            <div style="margin-left: 20px">
                <h4>Purchasing > Unit of Measure</h4>
                <p style="text-align:right; font-size:14px">Page:1 Records:@Model.Count</p>
            </div>
            <table class="table">
                <thead>
                    <tr style="font-size:14px">
                        <th>ID</th>
                        <th>Unit of Measure</th>
                        <th>Abreviation</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr style="font-size:14px">
                            <td>@item.UnitOfMeasureId</td>
                            <td>@item.UnitOfMeasure1</td>
                            <td>@item.UnitOfMeasureAbbreviation</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </aside>
    <footer>
        <p style="text-align:center; font-size:14px">Total Pages:1 Records:@Model.Count</p>
    </footer>
}